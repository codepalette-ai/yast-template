{
  "name": "turbo-template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm run db:init && turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "analyze": "turbo run analyze",
    "db:init": "cd packages/database && npx prisma format && npx prisma generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker && pnpm install",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design-system && pnpm run format"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=20"
  }
}
